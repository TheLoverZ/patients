<h1><%= t('list_locations', :scope => :location) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('code', :scope => :location) %></th>
      <th><%= t('name', :scope => :location) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.code %></td>
        <td><%= location.name %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("new_location", :scope => :location), new_location_path %>
